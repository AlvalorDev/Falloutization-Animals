<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <!-- Exclude horns and tusks from removed animals from trader ExoticMisc stock generators -->
    
    <!-- Add vanilla animal parts to excludedThingDefs -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/TraderKindDef/stockGenerators/li[@Class='StockGenerator_Tag' and tradeTag='ExoticMisc']/excludedThingDefs</xpath>
        <value>
            <li>ThrumboHorn</li>
            <li>ElephantTusk</li>
        </value>
    </Operation>
    


    <!-- Odyssey animals that produce parts -->
    <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Odyssey</li>
    </mods>
    <match Class="PatchOperationAdd">
        <xpath>Defs/TraderKindDef/stockGenerators/li[@Class='StockGenerator_Tag' and tradeTag='ExoticMisc']/excludedThingDefs</xpath>
        <value>
            <li>MastodonTusk</li>
            <li>AlphaThrumboHorn</li>
        </value>
    </match>
    </Operation>
</Patch>
