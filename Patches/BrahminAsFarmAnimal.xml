<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Make it possible for animal traders to stock Brahmin -->
  <Operation Class="PatchOperationAdd" MayRequire="Rick.FCP.Core.Tools">
    <xpath>Defs/ThingDef[defName='FCP_Animal_Brahmin']/tradeTags</xpath>
    <value><li>AnimalFarm</li></value>
  </Operation>

  <!-- Make Brahmin pennable -->
  <Operation Class="PatchOperationAdd" MayRequire="Rick.FCP.Core.Tools">
    <xpath>Defs/ThingDef[defName='FCP_Animal_Brahmin']/race</xpath>
    <value><roamMtbDays>2</roamMtbDays></value>
  </Operation>
</Patch>
